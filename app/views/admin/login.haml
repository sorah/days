!!! 5
%html
  %head
    %meta{charset: 'UTF-8'}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}
    %script{src: '/assets/jquery-2.1.3.min.js'}
    %script{src: '/assets/admin/bootstrap.min.js'}
    %link{href: "/assets/admin/bootstrap.min.css", rel: "stylesheet", media: "screen"}
    %link{href: '/assets/admin/login.css', rel: 'stylesheet'}
    %title Login - Days Admin
  %body
    .container
      %form.form-login{action: "/admin/login", method: "POST"}
        != csrf_tag
        %p
          %input.form-control.input-lg#login_name{type: 'text', name: "login_name", placeholder: "Login Name"}
        %p
          %input.form-control.input-lg{type: 'password', name: "password", placeholder: "Password"}
        %p
          %button.btn.btn-large.btn-primary{type: 'submit'} Log in
    :javascript
      jQuery(function() { $('#login_name').focus() })
